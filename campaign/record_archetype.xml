<root>
	<windowclass name="archetype">
		<frame>recordsheet</frame>
		<placement>
			<size width="350" height="350" />
		</placement>
		<sharable />
		<sizelimits>
			<minimum width="350" height="350" />
			<dynamic />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<tooltip field="name" />
		<nodelete />
		<playercontrol />
		<sharable />
		<script>
			function onLockChanged()
				if header.subwindow then
					header.subwindow.update();
				end
				if main.subwindow then
					main.subwindow.update();
				end
				if other.subwindow then
					other.subwindow.update();
				end
			end
		</script>
		<sheetdata>
			<sub_record_header name="header">
				<class>archetype_header</class>
			</sub_record_header>

			<frame_record_content_tabbed name="contentframe" />

			<subwindow_record name="main">
				<class>archetype_main</class>
			</subwindow_record>
			<subwindow_record name="other">
				<class>archetype_other</class>
			</subwindow_record>

			<scrollbar_record>
				<target>main</target>
			</scrollbar_record>
			<scrollbar_record>
				<target>other</target>
			</scrollbar_record>
			
			<tabs_recordsheet>
				<tab>
					<icon>tab_main</icon>
					<subwindow>main</subwindow>
				</tab>
				<tab>
					<icon>tab_other</icon>
					<subwindow>other</subwindow>
				</tab>
			</tabs_recordsheet>
			
			<resize_recordsheet />
			<close_recordsheet />
		</sheetdata>
	</windowclass>
	<windowclass name="archetype_header">
		<margins control="0,0,0,2" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				name.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<link_record_header>
				<class>archetype</class>
			</link_record_header>

			<anchor_record_header_right />
			<icon_record_locked />
			<button_record_locked />

			<string_record_name name="name">
				<empty textres="library_recordtype_empty_archetype" />
			</string_record_name>
			<label_recordtype name="recordtype">
				<static textres="record_label_archetype" />
			</label_recordtype>	
		</sheetdata>
	</windowclass>	
	<windowclass name="archetype_main">
		<margins control="0,0,0,7" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				features.update(bReadOnly);
				description.update(bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_column name="columnanchor" />			
			<label_column name="classtype_label">
				<static textres="class_label_classtype" />
			</label_column>
			<cycler_column_classstat name="classtype">
				<anchored width="80" />
				<parameters>
					<labelsres>class_label_classtype_archetype</labelsres>
					<values>archetype</values>
				</parameters>
			</cycler_column_classstat>
			<ft_columnh name="description" />
			<header_column name="features_header">
				<static textres="class_header_features"/>
				<center />
			</header_column>
			<button_iedit name="features_iedit">
				<anchored to="features_header" position="righthigh" offset="-20,0" />
				<target>features</target>
			</button_iedit>
			<button_iadd name="features_iadd">
				<anchored to="features_iedit" position="lefthigh" offset="5,0" />
				<target>features</target>
			</button_iadd>
			<list_column name="features">
				<datasource>.features</datasource>
				<sortby><control>level</control><control>name</control></sortby>
				<class>class_featurelistentry</class>
			</list_column>
		<!--	
			<header_column name="specialfeatures_header">
				<static textres="class_header_specialfeatures"/>
				<center />
			</header_column>
			<button_iedit name="specialfeatures_iedit">
				<anchored to="specialfeatures_header" position="righthigh" offset="-20,0" />
				<target>specialfeatures</target>
