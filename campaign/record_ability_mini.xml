<root>
	<windowclass name="ability_action_mini">
		<margins control="0,0,1,1" />
		<minisheet />
		<script file="campaign/scripts/ability_action_mini.lua" />
		<sheetdata>
			<hs name="type" />
			<button_abilityaction_mini name="button" />
			
		</sheetdata>
	</windowclass>
	
	<windowclass name="abilities_item_mini_header">
		<margins control="0,0,0,2" />
		<script>
			function activatePower()
				parentcontrol.window.activatePower();
			end
			
			function usePower()
				parentcontrol.window.usePower();
			end
			
			function onabilitiesCounterUpdate()
				parentcontrol.window.windowlist.window.onabilitiesCounterUpdate();
			end
		</script>
		<sheetdata>
			<anchor_column name="hanchor" />
			
			<genericcontrol name="usespacer">
				<anchored width="10" height="20">
					<top offset="2" />
					<left parent="hanchor" anchor="right" relation="relative" offset="5" />
				</anchored>
			</genericcontrol>
			<icon_usepower name="usepower">
				<anchored>
					<top offset="7" />
					<left parent="hanchor" anchor="right" relation="relative" offset="5" />
				</anchored>
			</icon_usepower>
			<basicnumber name="cost">
				<anchored width="20" height="20">
					<top offset="2" />
					<left parent="hanchor" anchor="right" relation="relative" offset="5" />
				</anchored>
				<min>0</min>
			</basicnumber>
			<genericcontrol name="cost_spacer">
				<anchored width="0" height="20">
					<top offset="2" />
					<left parent="hanchor" anchor="right" relation="relative" offset="5" />
				</anchored>
				<disabled />
			</genericcontrol>
			<counter_abilities name="counter">
				<anchored>
					<top offset="2" />
					<left parent="hanchor" anchor="right" relation="relative" offset="5" />
				</anchored>
			</counter_abilities>

			<windowlist name="actions">
				<anchored width="100">
					<top offset="2" />
					<right />
				</anchored>
				<datasource>.actions</datasource>
				<class>abilities_action_mini</class>
				<noscroll />
				<readonly />
				<columns width="25" fillwidth="true" />
			</windowlist>

			<simplestring name="name">
				<anchored>
					<top offset="2" />
					<left parent="hanchor" anchor="right" relation="relative" offset="5" />
					<right parent="actions" anchor="left" offset="-5" />
				</anchored>
				<multilinespacing>20</multilinespacing>
				<readonly />
			</simplestring>
		</sheetdata>
	</windowclass>
	
	<windowclass name="abilities_item_mini">
		<minisheet />
		<script file="campaign/scripts/ability.lua" />
		<sheetdata>
			<linkcontrol name="shortcut">
				<bounds>-22,2,20,20</bounds>
				<class>abilitiesdesc2</class>
				<readonly />
			</linkcontrol>
			
			<subwindow name="header">
				<anchored>
					<top />
					<left />
					<right offset="-27" />
				</anchored>
				<class>abilities_item_mini_header</class>
				<activate />
				<fastinit />
			</subwindow>
		</sheetdata>
	</windowclass>

	<windowclass name="abilities_level_mini">
		<minisheet />
		<script file="campaign/scripts/ability_level.lua" />
		<sheetdata>
			<string_abilitieslevellabel_mini name="label">
				<anchored position="insidetop" offset="0,2" height="20" />
			</string_abilitieslevellabel_mini>

			<list_abilitiesitem name="abilitiess">
				<anchored position="insidetop" offset="0,22" />
				<class>abilities_item_mini</class>
				<readonly />
			</list_abilitiesitem>
		</sheetdata>
	</windowclass>

	<windowclass name="abilities_class_mini">
		<minisheet />
		<script file="campaign/scripts/ability_class.lua" />
		<sheetdata>
			<hs name="castertype">
				<script>
					function onValueChanged()
						window.onCasterTypeChanged();
					end
				</script>
			</hs>
			<hn name="cl">
				<script>
					function onValueChanged()
						window.onStatUpdate();
					end
				</script>
			</hn>
			<number_abilitiessavailable_mini name="availablelevel0" />
			<number_abilitiessavailable_mini name="availablelevel1" />
			<number_abilitiessavailable_mini name="availablelevel2" />
			<number_abilitiessavailable_mini name="availablelevel3" />
			<number_abilitiessavailable_mini name="availablelevel4" />
			<number_abilitiessavailable_mini name="availablelevel5" />
			<number_abilitiessavailable_mini name="availablelevel6" />
			<!--
			<number_abilitiessavailable_mini name="availablelevel7" />
			<number_abilitiessavailable_mini name="availablelevel8" />
			<number_abilitiessavailable_mini name="availablelevel9" />
			-->
			<genericcontrol name="classframe">
				<bounds>6,6,-6,36</bounds>
				<frame name="groupbox2" offset="6,6,6,6" />
				<disabled />
			</genericcontrol>
			
			<genericcontrol name="hanchor">
				<bounds>-6,0,0,0</bounds>
				<invisible />
			</genericcontrol>
			<basicnumber name="pointsused">
				<anchored width="20" height="20">
					<top offset="11" />
					<right parent="hanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
				<min>0</min>
				<tooltip textres="abilities_tooltip_ppused" />
				<script>
					function onValueChanged()
						window.onabilitiesCounterUpdate();
					end
				</script>
			</basicnumber>
			<label name="label_pointsused">
				<anchored>
					<top offset="11" />
					<right parent="hanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
				<static>/</static>
			</label>
			<basicnumber name="points2">
				<anchored width="20" height="20">
					<top offset="11" />
					<right parent="hanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
				<min>0</min>
				<tooltip textres="abilities_tooltip_ppmax" />
				<script>
					function onValueChanged()
						window.onabilitiesCounterUpdate();
					end
				</script>
			</basicnumber>
			<label name="label_points">
				<anchored>
					<top offset="11" />
					<right parent="hanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
				<static textres="abilities_label_pp" />
			</label>
			<button_cc name="button_cc">
				<anchored width="20" height="20">
					<top offset="11" />
					<right parent="hanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
			</button_cc>
			<label name="label_cc">
				<anchored>
					<top offset="11" />
					<right parent="hanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
				<static textres="abilities_label_cc" />
			</label>
			<basicnumber name="cl">
				<anchored width="20" height="20">
					<top offset="11" />
					<right parent="hanchor" anchor="left" relation="relative" offset="-8" />
				</anchored>
				<min>0</min>
				<tooltip textres="casterlevel" />
				<script>
					function onValueChanged()
						window.onStatUpdate();
					end
				</script>
			</basicnumber>
			<label name="label_cl">
				<anchored>
					<top offset="11" />
					<right parent="hanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
				<static textres="cl" />
			</label>
			<stringfield name="label">
				<anchored height="20">
					<top offset="11" />
					<left parent="classframe" offset="10" />
					<right parent="hanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
				<font>reference-b</font>
				<readonly />
				<empty textres="abilitiesclass_emptyname" />
			</stringfield>
			
			<list_abilitieslevel name="levels">
				<anchored>
					<top parent="classframe" anchor="bottom" offset="6" />
					<left />
					<right />
				</anchored>
				<class>abilities_level_mini</class>
				<minisheet />
				<readonly />
			</list_abilitieslevel>
		</sheetdata>
	</windowclass>
</root>
