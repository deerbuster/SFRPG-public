<root>
	<windowclass name="logsheetmini">
		<frame>charsheet</frame>
		<placement>
			<size width="450" height="425" />
		</placement>
		<sizelimits>
			<minimum width="450" height="425" />
			<dynamic />
		</sizelimits>
		<minimize>minimized_npc</minimize>
		<softclose />
		<nodelete />
		<playercontrol />
		<minisheet />
        <script>
            function onInit()
                reftitle.setValue("Logged Actions");
            end
        </script>
		<sheetdata>
            <windowtitlebar name="reftitle" />
			<frame_char name="logframe">
				<anchored>
					<top offset="45" />
					<left offset="25"/>
					<right offset="-25" />
					<bottom offset="-25" />
				</anchored>
			</frame_char>
            <label name="level_label">
				<anchored to="logframe" position="insidetopleft" offset="20,10" width="20" />
				<center />
				<static>Lvl</static>
			</label>
            <label name="action_label">
				<anchored to="logframe" position="insidetopleft" offset="45,10" width="150" height="20" />
				<static>Action</static>
			</label>
            <label name="record_label">
				<anchored to="logframe" position="insidetopleft" offset="125,10" width="150" height="20" />
				<static>Record</static>
			</label>
            <label name="value_label">
				<anchored to="logframe" position="insidetopleft" offset="280,10" height="20" />
				<static>Value</static>
			</label>
            <windowlist name="logsummary">
				<anchored to="logframe">
					<top offset="30" />
					<left offset="15" />
					<right offset="-20" />
					<bottom offset="-15" />
				</anchored>            
                <child></child>
                <child><backcolor>1A40301E</backcolor></child>
                <datasource>.loglist</datasource>
                <class>loglist_entry</class>
				<sortby><control>entry</control></sortby>
            </windowlist>            
			<scrollbar>
				<anchored to="logsummary" />
				<target>logsummary</target>
			</scrollbar>
			<resize_charsheet />
			<close_charsheet />
		</sheetdata>
	</windowclass>

	<windowclass name="loglist_entry">
		<margins control="0,0,0,2" />
		<sheetdata>
            <number name="level_added">
                <bounds>5,2,20,20</bounds>
            </number>
            <simplestring name="action_added">
				<anchored width="75" height="20">
					<top offset="2" />
					<left parent="level_added" anchor="right" relation="relative" offset="5" />
				</anchored>
            </simplestring>
            <simplestring name="record_added">
				<anchored width="150" height="20">
					<top offset="2" />
					<left parent="action_added" anchor="right" relation="relative" offset="5" />
				</anchored>
            </simplestring>
            <simplestring name="value_added">
				<anchored height="20">
					<top offset="2" />
					<left parent="record_added" anchor="right" relation="relative" offset="5" />
				</anchored>
            </simplestring>
		</sheetdata>
	</windowclass>

	<template name="number_lognumber">
		<basicnumber>
			<nodrag />
			<readonly />
			<min>0</min>
		</basicnumber>
	</template>
	<template name="string_logstring">
		<stringcontrol>
			<anchored position="below" offset="0,8" height="20" />
			<disabled />
		</stringcontrol>
	</template>	
</root>	