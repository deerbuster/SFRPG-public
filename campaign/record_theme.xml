<root>
	<windowclass name="theme">
		<frame>recordsheet</frame>
		<placement>
			<size width="400" height="400" />
		</placement>
		<sharable />
		<sizelimits>
			<minimum width="350" height="350" />
			<dynamic />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<tooltip field="name" />
		<nodelete />
		<playercontrol />
		<sharable />
		<script>
			function onLockChanged()
				if header.subwindow then
					header.subwindow.update();
				end
				if main.subwindow then
					main.subwindow.update();
				end
				if other.subwindow then
					other.subwindow.update();
				end
			end
		</script>
		<sheetdata>
			<sub_record_header name="header">
				<class>theme_header</class>
			</sub_record_header>

			<frame_record_content_tabbed name="contentframe" />
			
			<subwindow_record name="main">
				<class>theme_stats</class>
			</subwindow_record>
			<subwindow_record name="other">
				<class>theme_other</class>
			</subwindow_record>

			<scrollbar_record>
				<target>text</target>
			</scrollbar_record>
			<scrollbar_record>
				<target>stats</target>
			</scrollbar_record>
			
			<tabs_recordsheet>
				<tab>
					<icon>tab_main</icon>
					<subwindow>main</subwindow>
				</tab>
				<tab>
					<icon>tab_other</icon>
					<subwindow>other</subwindow>
				</tab>
			</tabs_recordsheet>
			
			<resize_recordsheet />
			<close_recordsheet />
		</sheetdata>
	</windowclass>

	<windowclass name="theme_header">
		<margins control="0,0,0,2" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				name.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<link_record_header>
				<class>theme</class>
			</link_record_header>

			<anchor_record_header_right />
			<icon_record_locked />
			<button_record_locked />

			<string_record_name name="name">
				<empty textres="library_recordtype_empty_theme" />
			</string_record_name>
			<label_recordtype name="recordtype">
				<static textres="record_label_theme" />
			</label_recordtype>	
		</sheetdata>
	</windowclass>
	<windowclass name="theme_stats">
		<margins control="0,0,0,7" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				summary.update(bReadOnly);
				abilitymods.update(bReadOnly);	
				features.update(bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_column name="columnanchor" />

			<ft_columnh name="summary" />
			
			<header_column name="abilitymods_header">
				<anchor offset="0,30" />
				<static textres="theme_header_abilitymods"/>
				<center />
			</header_column>
			<button_iedit name="abilitymods_iedit">
				<anchored to="abilitymods_header" position="righthigh" offset="-20,0" />
				<target>abilitymods</target>
			</button_iedit>
			<button_iadd name="abilitymods_iadd">
				<anchored to="abilitymods_iedit" position="lefthigh" offset="5,0" />
				<target>abilitymods</target>
			</button_iadd>
			<list_mods_column name="abilitymods">
				<datasource>.abilitymodifiers</datasource>
				<class>theme_abilitymod</class>
			</list_mods_column>
			
			<header_column name="features_header">
				<anchor offset="0,30" />
				<static textres="theme_header_features"/>
				<center />
			</header_column>
			<button_iedit name="features_iedit">
				<anchored to="features_header" position="righthigh" offset="-20,0" />
				<target>features</target>
			</button_iedit>
			<button_iadd name="features_iadd">
				<anchored to="features_iedit" position="lefthigh" offset="5,0" />
				<target>features</target>
			</button_iadd>
			<list_column name="features">
				<datasource>.features</datasource>
				<class>theme_featurelistentry</class>
				<sortby><control>level</control><control>name</control></sortby>
			</list_column>
		</sheetdata>
	</windowclass>
	<windowclass name="theme_other">
		<margins control="0,0,0,7" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				text.update(bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_column name="columnanchor" />
			
			<ft_columnh name="text" />
		</sheetdata>
	</windowclass>
	
    <windowclass name="theme_featurelistentry">
		<margins control="0,0,0,2" />
		<script>
			function update(bReadOnly)
				level.setReadOnly(bReadOnly);
				name.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_listitem_column_right name="rightanchor" />
			<link_listitem_column name="shortcut">
				<class>themefeature</class>
			</link_listitem_column>
			<button_listitem_column_delete name="idelete" />

			<basicnumber name="level">
				<anchored position="insidetopleft" offset="5,2" height="20" width="20" />
			</basicnumber>
			<string_listitem_column_name name="name">
				<anchored offset="35,2" />
				<empty textres="library_recordtype_empty_classfeature" />
			</string_listitem_column_name>
		</sheetdata>
	</windowclass>

	<windowclass name="theme_abilitymod"> 
		<margins control="0,0,0,2" />
		<script>
			function update(bReadOnly)
				stat.setReadOnly(bReadOnly);
				mod.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_listitem_column_right name="rightanchor" />
			<button_listitem_column_delete name="idelete" />

			<cycler_listitem_column_mod name="stat" />
			<string_listitem_column_mod name="mod" />
		</sheetdata>
	</windowclass>
	
	<windowclass name="themefeature">
		<frame>recordsheet</frame>
		<placement>
			<size width="350" height="350" />
		</placement>
		<sizelimits>
			<minimum width="300" height="300" />
			<dynamic />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<tooltip field="name" />
		<sheetdata>
			<sub_record_header name="header">
				<class>themefeature_header</class>
			</sub_record_header>

			<frame_record_content />
			
			<label name="level_label">
				<anchored>
					<top parent="header" anchor="bottom" relation="relative" offset="15" />
					<left parent="contentframe" anchor="left" relation="relative" offset="0" />
				</anchored>
				<static textres="class_label_classbuildfeatureabilitylevel" />
			</label>
			<simplenumber name="level">
				<anchored height="20">
					<top parent="level_label" anchor="top" relation="relative" />
					<left parent="level_label" anchor="right" relation="relative" offset="0" />
					<right parent="contentframe" anchor="right" relation="relative" offset="-5"/>
				</anchored>
			</simplenumber>

			<ft_record name="text">
				<anchored to="contentframe" position="over" offset="0,-30" />
				<footer>footer_wide</footer>
			</ft_record>
			<scrollbar>
				<anchored to="text" />
				<target>text</target>
			</scrollbar>
			
			<resize_recordsheet />
			<close_recordsheet />
		</sheetdata>
	</windowclass>
	<windowclass name="themefeature_header">
		<margins control="0,0,0,2" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				name.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<link_record_header>
				<class>themefeature</class>
			</link_record_header>

			<anchor_record_header_right />
			<icon_record_locked />
			<button_record_locked />

			<string_record_name name="name">
				<empty textres="library_recordtype_empty_themefeature" />
			</string_record_name>
			<label_recordtype name="recordtype">
				<static textres="record_label_themefeature" />
			</label_recordtype>	
		</sheetdata>
	</windowclass>
	
	<windowclass name="theme_feature_ability">
		<frame>recordsheet</frame>
		<placement>
			<size width="450" height="450" />
		</placement>
		<sharable />
		<sizelimits>
			<minimum width="350" height="350" />
			<dynamic />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<tooltip field="name" />
		<nodelete />
		<playercontrol />
		<sharable />
		<script>
			function onLockChanged()
				if header.subwindow then
					header.subwindow.update();
				end
			end
		</script>
		<sheetdata>
			<sub_record_header name="header">
				<class>theme_feature_ability_header</class>
			</sub_record_header>

			<frame_record_content_tabbed name="contentframe" />

			<label name="level_label">
				<anchored>
					<top parent="header" anchor="bottom" relation="relative" offset="15" />
					<left parent="contentframe" anchor="left" relation="relative" offset="0" />
				</anchored>
				<static textres="class_label_classbuildfeatureabilitylevel" />
			</label>
			<simplenumber name="level">
				<anchored height="20">
					<top parent="level_label" anchor="top" relation="relative" />
					<left parent="level_label" anchor="right" relation="relative" offset="0" />
					<right parent="contentframe" anchor="right" relation="relative" offset="-5"/>
				</anchored>
			</simplenumber>

			<ft_record name="text">
				<anchored to="contentframe" position="over" offset="0,-30" />
				<footer>footer_wide</footer>
			</ft_record>
			<scrollbar>
				<anchored to="text" />
				<target>text</target>
			</scrollbar>
			
			<resize_recordsheet />
			<close_recordsheet />
		</sheetdata>
	</windowclass>
	<windowclass name="theme_feature_ability_header">
		<margins control="0,0,0,2" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				name.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<link_record_header>
				<class>theme_feature_ability</class>
			</link_record_header>

			<anchor_record_header_right />
			<icon_record_locked />
			<button_record_locked />

			<string_record_name name="name">
				<empty textres="library_recordtype_empty_themefeatureability" />
			</string_record_name>
			<label_recordtype name="recordtype">
				<static textres="record_label_themefeatureability" />
			</label_recordtype>	
		</sheetdata>
	</windowclass>
	
</root>
