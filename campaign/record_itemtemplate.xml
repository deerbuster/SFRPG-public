<root>
	<windowclass name="itemtemplate">
		<frame>recordsheet</frame>
		<placement>
			<size width="350" height="400" />
		</placement>
		<sizelimits>
			<minimum width="300" height="400" />
			<dynamic />
		</sizelimits>
		<nodelete />
		<playercontrol />
		<sharable />
        <script file="campaign/scripts/itemtemplate.lua" />
		<tooltip field="name" />
		<minimize>minimized_item</minimize>
		<sheetdata>
			<sub_record_header name="header">
				<class>itemtemplate_header</class>
			</sub_record_header>

			<frame_record_content name="contentframe" />

			<subwindow_record name="main">
				<class>itemtemplate_main</class>
				<activate />
			</subwindow_record>
			<subwindow_record name="other">
				<class>itemtemplate_other</class>
			</subwindow_record>
			<scrollbar_record>
				<target>main</target>
			</scrollbar_record>
			<scrollbar_record>
				<target>other</target>
			</scrollbar_record>
			
			<tabs_recordsheet>
				<tab>
					<icon>tab_main</icon>
					<subwindow>main</subwindow>
				</tab>
				<tab>
					<icon>tab_other</icon>
					<subwindow>other</subwindow>
				</tab>
			</tabs_recordsheet>		

			<resize_recordsheet />
			<close_recordsheet />
		</sheetdata>
	</windowclass>
	
	<windowclass name="itemtemplate_header">
		<margins control="0,0,0,2" />
		<script>
			function update(sTitle)
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				name.setReadOnly(bReadOnly);
				recordtype.update(sTitle);
			end
		</script>
		<sheetdata>
			<link_record_header>
				<class>itemtemplate</class>
			</link_record_header>

			<anchor_record_header_right />
			<icon_record_locked />
			<button_record_locked />

			<string_record_name name="name">
				<empty textres="library_recordtype_empty_itemtemplate" />
			</string_record_name>
			<label_recordtype name="recordtype">
				<static textres="ref_type_itemtemplate" />
				<script>
					function update(sTitle)
						setValue(sTitle);
					end
				</script>
			</label_recordtype>	
		</sheetdata>
	</windowclass>
	
	<windowclass name="itemtemplate_main">
		<margins control="0,0,0,2" />
		<script file="campaign/scripts/itemtemplate_main.lua" />
		<sheetdata>
			<anchor_column name="columnanchor" />
			
			<label_column name="nonid_name_label">
				<static textres="item_label_unidentified" />
			</label_column>
			<string_columnh name="nonid_name" />
			
			<label_column name="nonidentified_label">
				<static textres="item_label_unidentifiednotes" />
			</label_column>
			<string_columnh name="nonidentified" />
			
			<line_column name="divider" />

			
			<label_column name="type_label">
				<static textres="item_label_type" />
			</label_column>
			<string_columnh name="type">
				<nohide />
				<delaykeyupdate />
				<script>
					function onValueChanged()
						window.update();
                        window.parentcontrol.window.onStateChanged();
					end
				</script>
			</string_columnh>

			<label_column name="subtype_label">
				<static textres="item_label_subtype" />
			</label_column>
			<string_columnh name="subtype">
				<delaykeyupdate />
				<script>
					function onValueChanged()
						window.update();
                        window.parentcontrol.window.onStateChanged();
					end
				</script>
			</string_columnh>

			<label_column name="level_label">
				<static textres="item_label_level" />
			</label_column>
			<number_columnh name="level" />

			<line_column name="divider2" />

			<label_column name="price_label">
				<static textres="item_label_price" />
			</label_column>
			<string_columnh name="price" />
				

			<label_column name="bulk_label">
				<static textres="item_label_bulk" />
			</label_column>
			<string_columnh name="bulk" />

			<line_column name="divider3" />
			
			<label_column name="slots_label">
				<static textres="item_label_slots" />
			</label_column>
			<number_columnh name="slots" />
			
			<label_column name="armortype_label">
				<static textres="item_label_armortype" />
			</label_column>
			<string_columnh name="armortype" />
			
			<label_column name="bonus_label">
				<static textres="item_label_bonus" />
			</label_column>
			<number_columnh name="bonus">
				<delaykeyupdate />
				<displaysign />
			</number_columnh>
			

		</sheetdata>
	</windowclass>
	
	<windowclass name="itemtemplate_other">
		<margins control="0,0,0,7" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				description.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_column name="columnanchor" />
			
			<ft_columnh name="description">
				<footer>footer_wide</footer>
			</ft_columnh>
		</sheetdata>
	</windowclass>
	
</root>
