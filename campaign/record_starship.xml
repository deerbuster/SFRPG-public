			</link_listitem_column>
			<button_listitem_column_delete name="idelete" />

			<string_listitem_column_name name="name">
				<anchored>
					<top parent="" anchor="top" relation="relative" offset="5" />
					<left parent="" anchor="left" relation="relative" offset="0" />
					<right parent="" anchor="left" relation="relative" offset="92" />
