<root>
	<windowclass name="skill">
		<frame>recordsheet</frame>
		<placement>
			<size width="400" height="350" />
		</placement>
		<sizelimits>
			<dynamic />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<tooltip field="name" />
		<nodelete />
		<playercontrol />
		<sharable />
		<script>
			function onLockChanged()
				if header.subwindow then
					header.subwindow.update();
				end
				if other.subwindow then
					other.subwindow.update();
				end
				
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				if other.subwindow then
					other.subwindow.text.setReadOnly(bReadOnly);
				end
			end
		</script>
		<sheetdata>
			<sub_record_header name="header">
				<class>skill_header</class>
			</sub_record_header>

			<frame_record_content_tabbed name="contentframe" />
			
			<subwindow_record name="main">
				<class>skill_stats</class>
			</subwindow_record>
			<subwindow_record name="other">
				<class>skill_other</class>
			</subwindow_record>

			<scrollbar_record>
				<target>main</target>
			</scrollbar_record>
			<scrollbar_record>
				<target>other</target>
			</scrollbar_record>
			
			<tabs_recordsheet>
				<tab>
					<icon>tab_main</icon>
					<subwindow>main</subwindow>
				</tab>
				<tab>
					<icon>tab_other</icon>
					<subwindow>other</subwindow>
				</tab>
			</tabs_recordsheet>
			
			<resize_recordsheet />
			<close_recordsheet />
		</sheetdata>
	</windowclass>	
	<windowclass name="skill_header">
		<margins control="0,0,0,7" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				name.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<link_record_header>
				<class>skill</class>
			</link_record_header>

			<anchor_record_header_right />
			<icon_record_locked />
			<button_record_locked />

			<string_record_name name="name">
				<empty textres="library_recordtype_empty_skill" />
			</string_record_name>
			<label_recordtype name="recordtype">
				<static textres="record_label_skill" />
			</label_recordtype>	
		</sheetdata>
	</windowclass>
	<windowclass name="skill_stats">
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				if bReadOnly then
					local aLabel = {};
					table.insert(aLabel, ability.getValue());
					if trained.getValue() ~= 0 then
						table.insert(aLabel, "Trained only");
					end
					if armorcheckpenalty.getValue() ~= 0 then
						table.insert(aLabel, "Armor check penalty");
					end
					type_label.setValue("[" .. table.concat(aLabel, "; ") .. "]");
					type_label.setVisible(true);
					
					ability.update(bReadOnly, true);
					trained.update(bReadOnly, true);
					armorcheckpenalty.update(bReadOnly, true);
				else
					type_label.setVisible(false);
					
					ability.update(bReadOnly);
					trained.update(bReadOnly);
					armorcheckpenalty.update(bReadOnly);
				end
				summary.update(bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_column name="columnanchor" />
			
			<label name="type_label">
				<anchored>
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
					<left />
					<right />
				</anchored>
				<font>reference-b-large</font>
			</label>

			<label_column name="ability_label">
				<static textres="skill_label_ability" />
			</label_column>
			
			<string_columnh name="ability" />			
			<label_column name="trained_label">
				<static textres="skill_label_trainedonly" />
			</label_column>
			<button_checkbox_columnh name="trained" />
			
			<label_column name="armorcheckpenalty_label">
				<static textres="skill_label_armorcheckpenalty" />
			</label_column>
			<button_checkbox_columnh name="armorcheckpenalty" />
			
			<ft_columnh name="summary" />
			
			<header_column name="tasks_header">
				<static textres="skill_label_tasks_header" />
			</header_column>
			<button_iedit name="tasks_iedit">
				<anchored to="tasks_header" position="righthigh" offset="-20,0" />
				<target>tasks</target>
			</button_iedit>
			<button_iadd name="tasks_iadd">
				<anchored to="tasks_iedit" position="lefthigh" offset="5,0" />
				<target>tasks</target>
			</button_iadd>
			<list_column name="tasks">
				<class>skill_task_listentry</class>
				<datasource>.tasks</datasource>					
			</list_column>
			
		</sheetdata>
	</windowclass>
	<windowclass name="skill_other">
		<margins control="0,0,0,7" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				text.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_column name="columnanchor" />
			
			<ft_columnh name="text">
				<footer>footer_wide</footer>
			</ft_columnh>
		</sheetdata>
	</windowclass>

	<windowclass name="skill_task_listentry">
		<margins control="0,0,0,2" />
		<script>
			function update(bReadOnly)
				name.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_listitem_column_right name="rightanchor" />
			<link_listitem_column name="shortcut">
				<class>skilltask</class>
			</link_listitem_column>
			<button_listitem_column_delete name="idelete" />

			<string_listitem_column_name name="name">
				<anchored offset="0,2" />
				<empty textres="library_recordtype_empty_skilltask" />
			</string_listitem_column_name>
		</sheetdata>
	</windowclass>
	
	<windowclass name="skilltask">
		<frame>recordsheet</frame>
		<placement>
			<size width="400" height="350" />
		</placement>
		<sizelimits>
			<dynamic />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<tooltip field="name" />
		<nodelete />
		<playercontrol />
		<sharable />
		<script>
			function onLockChanged()
				if header.subwindow then
					header.subwindow.update();
				end
				if content.subwindow then
					content.subwindow.update();
				end
			end
		</script>
		<sheetdata>
			<sub_ref_header name="header">
				<class>skill_task_header</class>
			</sub_ref_header>

			<frame_ref_content />
			<sub_ref_content name="content">
				<class>skill_task_stats</class>
			</sub_ref_content>
			<scrollbar_ref_content />
			
			<resize_referencepage />
			<close_referencepage />
		</sheetdata>
	</windowclass>
	<windowclass name="skill_task_header">
		<margins control="0,0,0,7" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				name.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<link_record_header>
				<class>skilltask</class>
			</link_record_header>

			<anchor_record_header_right />
			<icon_record_locked />
			<button_record_locked />

			<string_record_name name="name">
				<empty textres="library_recordtype_empty_skilltask" />
			</string_record_name>
			<label_recordtype name="recordtype">
				<static textres="record_label_skilltask" />
			</label_recordtype>	
		</sheetdata>
	</windowclass>
	<windowclass name="skill_task_stats">
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				text.update(bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_column name="columnanchor" />
			
			<ft_columnh name="text" />

			
		</sheetdata>
	</windowclass>

</root>
