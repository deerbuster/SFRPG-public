<root>
	<windowclass name="chat" merge="join">
		<sizelimits>
			<dynamic />
		</sizelimits>
		<sheetdata>
			<basicchatwindow name="chat">
				<droptypes>
					<type merge="add">fullattack</type>
					<type merge="add">attack</type>
					<type merge="add">damage</type>
					<type merge="add">init</type>
					<type merge="add">save</type>
					<type merge="add">ability</type>
					<type merge="add">skill</type>
				</droptypes>
			</basicchatwindow>
		</sheetdata>
	</windowclass>

	<windowclass name="modifierstack" merge="join">
		<sizelimits>
			<minimum width="260" height="60" />
		</sizelimits>
		<noclose />
		<script>
			function onInit()
				ModifierStack.registerControl(self);
			end
			
			function onClose()
				ModifierStack.registerControl(nil);
			end
		</script>
		<sheetdata>
			<genericcontrol name="base">
				<acceptdrop>
					<type merge="add">fullattack</type>
					<type merge="add">attack</type>
					<type merge="add">damage</type>
					<type merge="add">init</type>
					<type merge="add">save</type>
					<type merge="add">ability</type>
					<type merge="add">skill</type>
				</acceptdrop>
			</genericcontrol>
			<numbercontrol name="modifier">
				<droptypes>
					<type merge="add">fullattack</type>
					<type merge="add">attack</type>
					<type merge="add">damage</type>
					<type merge="add">init</type>
					<type merge="add">save</type>
					<type merge="add">ability</type>
					<type merge="add">skill</type>
				</droptypes>
			</numbercontrol>
			<button_modifierkey name="DEF_PCOVER">
				<bounds>80,4,30,20</bounds>
				<text>PCover</text>
			</button_modifierkey>
			<button_modifierkey name="DEF_COVER">
				<bounds>125,4,30,20</bounds>
				<text>Cover</text>
			</button_modifierkey>
			<button_modifierkey name="DEF_SCOVER">
				<bounds>170,4,30,20</bounds>
				<text>ICover</text>
			</button_modifierkey>
			<button_modifierkey name="ATT_FF">
				<bounds>80,36,30,20</bounds>
				<text>F-F</text>
			</button_modifierkey>
		</sheetdata>
	</windowclass>

	<windowclass name="dicetower" merge="join">
		<sheetdata>
			<genericcontrol name="base">
				<droptypes>
					<type merge="add">attack</type>
					<type merge="add">fullattack</type>
					<type merge="add">damage</type>
					<type merge="add">init</type>
					<type merge="add">save</type>
					<type merge="add">ability</type>
					<type merge="add">skill</type>
				</droptypes>
			</genericcontrol>
			
		</sheetdata>
	</windowclass>
</root>

